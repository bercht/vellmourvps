{
  "name": "vellmour-app",
  "license": "UNLICENSED",
  "engines": {
    "node": "18.x",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "esbuild app/javascript/app.js --bundle --outfile=app/assets/builds/application.js --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "build:js": "esbuild app/javascript/application.js --bundle --outfile=app/assets/builds/application.js --public-path=/assets",
    "build": "npm run build:css && npm run build:js",
    "start": "npm run build && rails server -b 0.0.0.0 -p 3000"

  },
  "dependencies": {
    "@hotwired/stimulus": "^3.0.0",
    "@hotwired/turbo-rails": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.19.0",
    "postcss": "^8.5.6",
    "spotlight.js": "^0.7.8",
    "stimulus": "^3.2.2",
    "sweetalert2": "^11.22.2",
    "tailwindcss": "^4.1.11"
  }
}
